<%= form_for(@course) do |f| %>
    <% if @course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
          <ul>
            <% @course.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :course_number %><br>
      <%= f.text_field :course_number, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :start_date %><br>
      <%= f.date_select :start_date, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :end_date %><br>
      <%= f.date_select :end_date, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :status %><br>
      <%= f.select :status, options_for_select(Course.status_options), {}, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :instructor %>
      <%= select_tag :instructor, options_from_collection_for_select(User.where('type = ?', 'Instructor'), 'id', 'name'), class: 'form-control'%>
    </div>
    <div class="actions">
      <%= f.submit 'Submit', class: 'btn btn-primary pull-right' %>
    </div>
      <%= link_to_function 'Back', 'history.back()', class: 'btn btn-default pull-right' %>
<% end %>
